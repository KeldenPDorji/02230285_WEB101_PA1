/* public/style.css */

@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');
@import url('https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%);
  background-size: 400% 400%;
  animation: gradientShift 15s ease infinite;
  font-family: 'Press Start 2P', cursive;
  color: #333;
  margin: 0;
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: 1;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

main {
  padding: 1rem;
  margin: auto;
  position: relative;
  z-index: 2;
}

body {
  cursor: none;
}

#charizard-cursor {
  position: fixed;
  width: 90px; /* Increased width */
  height: 90px; /* Increased height */
  background-image: url('https://media.tenor.com/IL6LH7ayzAgAAAAi/charizard.gif');
  background-size: cover;
  z-index: 9999;
  pointer-events: none;
  display: none;
}

.loading-spinner {
  border: 6px solid rgba(255, 255, 255, 0.3);
  border-top: 6px solid #f093fb;
  border-right: 6px solid #667eea;
  border-radius: 50%;
  width: 60px;
  height: 60px;
  animation: spin 1s linear infinite, pulse 2s ease-in-out infinite;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  box-shadow: 0 0 30px rgba(240, 147, 251, 0.5);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { transform: translate(-50%, -50%) scale(1); }
  50% { transform: translate(-50%, -50%) scale(1.1); }
}

main > h1 {
  text-align: center;
  color: #333;
  margin-bottom: 2rem;
  font-size: 2.5rem;
  text-transform: uppercase;
}

.header {
  text-align: center;
  color: #fff;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 2rem 1rem;
  margin-bottom: 2rem;
  font-size: 2.5rem;
  font-weight: bold;
  text-transform: uppercase;
  border-radius: 20px;
  box-shadow: 
    0 10px 40px rgba(0, 0, 0, 0.3),
    inset 0 -3px 10px rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 2;
  text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.4);
  animation: headerPulse 3s ease-in-out infinite;
  border: 3px solid rgba(255, 255, 255, 0.3);
}

.header::before {
  content: '✨';
  position: absolute;
  left: 10%;
  top: 50%;
  transform: translateY(-50%);
  font-size: 2rem;
  animation: sparkle 2s ease-in-out infinite;
}

.header::after {
  content: '✨';
  position: absolute;
  right: 10%;
  top: 50%;
  transform: translateY(-50%);
  font-size: 2rem;
  animation: sparkle 2s ease-in-out infinite 1s;
}

@keyframes headerPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02); }
}

@keyframes sparkle {
  0%, 100% { opacity: 0.5; transform: translateY(-50%) scale(1); }
  50% { opacity: 1; transform: translateY(-50%) scale(1.3); }
}

#app,
.pokemon-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  grid-gap: 1.5rem;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 2;
}

.card {
  width: 100%;
  height: 350px;
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
  backdrop-filter: blur(10px);
  color: #333;
  padding: 1rem;
  border-radius: 20px;
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 0.5);
  position: relative;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  border: 2px solid rgba(255, 255, 255, 0.4);
}

.card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  transform: rotate(45deg);
  transition: 0.5s;
}

.card:hover::before {
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.card--id {
  background: linear-gradient(135deg, #f093fb, #f5576c);
  color: white;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  border: 2px solid rgba(255, 255, 255, 0.3);
  z-index: 2;
  background: #cebf7b;
  width: 3rem;
  color: #fff;
  padding: 0.1rem;
  font-weight: 700;
  position: absolute;
  border-radius: 0 0 10px 0;
  top: 0;
  left: 0;
  margin-top: 0.5rem;
  text-align: center;
  font-size: clamp(1rem, 3vw, 1.5rem); /* Responsive font size */
}

.card--name {
  text-transform: capitalize;
  color: #333;
  font-size: clamp(1.4rem, 2vw, 2rem);
  font-weight: 700;
  margin-top: 2.5rem;
  text-align: center;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.card--image {
  width: 150px;
  display: block;
  margin: auto;
  filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.3));
  transition: transform 0.3s ease;
}

.card:hover .card--image {
  transform: scale(1.1) rotate(5deg);
  filter: drop-shadow(0 8px 25px rgba(0, 0, 0, 0.4));
}

.card--details {
  font-size: clamp(1rem, 1.5vw, 1.3rem);
  color: #333;
  text-align: center;
}

.card--abilities,
.card--stats {
  margin-top: 1rem;
  text-align: center;
}

.card--abilities h3,
.card--stats h3 {
  font-size: clamp(1rem, 1.5vw, 1.2rem);
  margin-bottom: 0.5rem;
}

.card--abilities ul,
.card--stats ul {
  list-style-type: none;
  padding-left: 0;
}

.card--abilities li,
.card--stats li {
  margin-bottom: 0.25rem;
}

.card--abilities .type-grass {
  color: #78c850;
}

.card--abilities .type-fire {
  color: #f08030;
}

.card--abilities .type-water {
  color: #6890f0;
}

.card:hover {
  transform: translateY(-15px) scale(1.05) rotate(2deg);
  box-shadow: 
    0 20px 60px rgba(0, 0, 0, 0.4),
    0 0 30px rgba(255, 255, 255, 0.5),
    inset 0 1px 0 rgba(255, 255, 255, 0.8);
}

.card--details .bar {
  background-color: #4caf50;
  margin-bottom: 10px;
}

.card--details .chart {
  display: flex;
  flex-direction: column;
}

.card--details .stat {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.card--details .label {
  width: 100px;
}

.card--details .value {
  margin-left: 10px;
}

.card--details .bar {
  width: 50%;
}

.card:hover .card__inner {
  transform: rotateY(180deg);
}

.card__inner {
  width: 100%;
  height: 100%;
  transition: transform 0.6s;
  transform-style: preserve-3d;
}

.card__front,
.card__back {
  width: 100%;
  height: 100%;
  position: absolute;
  backface-visibility: hidden;
}

.card__front {
  z-index: 2;
}

.card__back {
  transform: rotateY(180deg);
}

.search-bar {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  position: relative;
  z-index: 2;
}

.pokemon-search {
  width: 80%;
  padding: 15px 20px;
  font-size: clamp(1rem, 1.5vw, 1.2rem);
  border: 3px solid transparent;
  border-radius: 50px;
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
  backdrop-filter: blur(10px);
  color: #333;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 
    0 5px 25px rgba(0, 0, 0, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 0.5);
}

.pokemon-search:focus {
  width: 90%;
  outline: none;
  border-color: #f093fb;
  box-shadow: 
    0 10px 40px rgba(240, 147, 251, 0.4),
    0 0 20px rgba(240, 147, 251, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.8);
  transform: translateY(-3px);
}

.pokemon-search::placeholder {
  color: rgba(51, 51, 51, 0.5);
}

/* Pagination */
.pagination {
  text-align: center;
  margin-top: 20px;
}

#load-more {
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

#load-more:hover {
  background-color: #0056b3;
}

/* Loading spinner */
.spinner {
  border: 4px solid rgba(0, 0, 0, 0.1);
  border-top: 4px solid #333;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  animation: spin 1s linear infinite;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Modal */
.modal {
  display: none;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(8px);
  overflow: auto;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
  backdrop-filter: blur(20px);
  margin: 5% auto;
  padding: 30px;
  border: 3px solid rgba(255, 255, 255, 0.4);
  border-radius: 30px;
  width: 80%;
  max-width: 700px;
  position: relative;
  box-shadow: 
    0 20px 80px rgba(0, 0, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.6);
  animation: slideUp 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(50px) scale(0.9);
  }
  to { 
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-content h2 {
  text-transform: capitalize;
  color: #333;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.close-button {
  color: #ff4e50;
  position: absolute;
  top: 15px;
  right: 20px;
  font-size: 32px;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.5);
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.close-button:hover,
.close-button:focus {
  color: #fff;
  background: #ff4e50;
  transform: rotate(90deg) scale(1.1);
  box-shadow: 0 6px 25px rgba(255, 78, 80, 0.5);
  text-decoration: none;
}

.show {
  display: block;
}

.modal-info {
  margin-bottom: 20px;
  background: rgba(255, 255, 255, 0.5);
  padding: 15px;
  border-radius: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.modal-info p {
  margin-bottom: 10px;
  font-size: 0.9rem;
  line-height: 1.6;
}

.modal-info .label {
  font-weight: bold;
  color: #667eea;
}

.modal-details {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.modal--image {
  max-width: 250px;
  margin: 0 auto;
  filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.3));
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

/* Charizard cursor styles */
.charizard-cursor-click {
  background-image: url('https://media.tenor.com/IL6LH7ayzAgAAAAi/charizard-click.gif');
}

.charizard-cursor {
  display: block;
}

.charizard-cursor:hover,
.card:hover .charizard-cursor {
  background-image: url('https://media.tenor.com/IL6LH7ayzAgAAAAi/charizard.gif');
}

/* Small cards for abilities and moves */
.small-card-container {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  justify-content: center;
  margin-top: 10px;
}

.small-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.8), rgba(118, 75, 162, 0.8));
  color: white;
  padding: 8px 15px;
  border-radius: 20px;
  font-size: 0.7rem;
  text-transform: capitalize;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  border: 2px solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(5px);
}

.small-card:hover {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
  background: linear-gradient(135deg, rgba(102, 126, 234, 1), rgba(118, 75, 162, 1));
}

/* Media queries for responsiveness */

@media only screen and (max-width: 768px) {
  main {
    padding: 0.5rem;
  }

  .card {
    height: 300px;
  }

  .card--name {
    font-size: clamp(1.2rem, 2vw, 1.8rem);
  }

  .card--details {
    font-size: clamp(0.8rem, 1.5vw, 1rem);
  }

  .pokemon-search {
    width: 90%;
  }

  .pagination {
    margin-top: 10px;
  }
}

/* Scrollbar styling */
::-webkit-scrollbar {
  width: 12px;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10px;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 10px;
  border: 2px solid rgba(255, 255, 255, 0.2);
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #764ba2, #f093fb);
}

/* Selection styling */
::selection {
  background: rgba(102, 126, 234, 0.5);
  color: white;
}
